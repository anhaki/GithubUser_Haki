<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubUserHaki" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.GithubUserHaki" parent="Base.Theme.GithubUserHaki" />

    <style name="CardStyle">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="ProgressStyle">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/black</item>
    </style>

    <style name="SearchStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="navigationIconTint">@color/black</item>
    </style>

    <style name="barStyle">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="splashStyle">
        <item name="tint">@color/black</item>
    </style>

    <style name="tabStyle">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>

    <style name="listStyle">
        <item name="android:background">@color/white</item>
    </style>
</resources>