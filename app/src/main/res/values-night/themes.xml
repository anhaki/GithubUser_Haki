<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubUserHaki" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CardStyle">
        <item name="cardBackgroundColor">@android:color/black</item>
        <item name="strokeColor">@android:color/white</item>
    </style>

    <style name="ProgressStyle">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <style name="SearchStyle">
        <item name="android:backgroundTint">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>


    <style name="barStyle">
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="splashStyle">
        <item name="tint">@color/white</item>
    </style>

    <style name="tabStyle">
        <item name="android:background">@color/black</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="listStyle">
        <item name="android:background">@color/black</item>
    </style>

</resources>